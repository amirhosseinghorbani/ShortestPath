        <TextBlock HorizontalAlignment="Left" Margin="10,42,0,0" TextWrapping="Wrap" Text="Vertex Name :" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="226,111,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="146,111,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        <TextBox x:Name="txtVertextName" HorizontalAlignment="Left" Height="23" Margin="113,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" FontSize="16" TextAlignment="Center" MaxLength="5" TabIndex="5" KeyDown="txtVertextName_KeyDown"/>

    </Grid>
</Window>
